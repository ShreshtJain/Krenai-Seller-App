<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".Activity.Products.VariantMatrix">
    <LinearLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center"
        android:visibility="gone"
        android:alpha="0.1"
        android:background="#B0000000 "
        android:id="@+id/progress_linear_layout">
        <ProgressBar
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminate="true"
            android:indeterminateTintMode="src_atop"
            android:indeterminateTint="@color/colorAccent"/>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp">
        <LinearLayout
            android:id="@+id/toolbar"
            android:minHeight="?attr/actionBarSize"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:titleTextColor="@android:color/black"
            android:weightSum="10"
            android:background="@color/colorPrimaryDark">
            <Button
                android:id="@+id/clear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:background="@drawable/clear"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Edit Product Variant"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_weight="9"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical">
            </TextView>
            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textColor="@color/white"
                android:text="Save"
                android:textAllCaps="true"
                android:layout_marginLeft="20dp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_gravity="end"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"/>
        </LinearLayout>
    </FrameLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_weight="10"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAccent"
                android:fontFamily="@font/adamina"
                android:textAllCaps="true"
                android:textSize="18sp"
                android:padding="10dp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="vertical"
        app:cardCornerRadius="4dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:weightSum="10">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="mrp *"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/mrp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="₹"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="price *"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="₹"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="base price *"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/base"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="₹"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="qty *"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/qty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="MIN ORDER QTY"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/min"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="1"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="Max ORDER QTY"
                        android:layout_marginStart="10dp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/max"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="100"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="sku *"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/sku"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="barcode"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/barcode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint=""
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#c0c0c0"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="item weight"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/edit_item_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex. 200 Gram"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="5">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textAllCaps="true"
                        android:text="packaging weight"
                        android:layout_marginStart="10dp"
                        android:textSize="15sp"
                        android:textColor="#000000"
                        />
                    <EditText
                        android:id="@+id/packaging_weight"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Ex. 400 Gram"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_hollow_rectangular"
                        android:padding="10dp"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="8dp"
        app:cardCornerRadius="4dp"
        android:layout_height="200dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:text="Media"
                android:textStyle="bold"
                android:fontFamily="@font/roboto"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:text="@string/productsmedia"
                android:layout_marginRight="30dp" />

            <ImageView
                android:id="@+id/update_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/dash_image_upload_bg"
                android:src="@drawable/add_photos"
                android:scaleType="center"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
</LinearLayout>



