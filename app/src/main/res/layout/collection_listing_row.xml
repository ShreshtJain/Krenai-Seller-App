<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/rowBG"
        android:layout_width="60dp"
        android:layout_height="120dp"
        android:layout_alignParentEnd="true"
        android:gravity="center"
        android:padding="10dp"
        android:layout_margin="8dp"
        android:backgroundTint="#d65819"
        android:orientation="horizontal"
        app:cardCornerRadius="4dp"
        android:elevation="0dp">
        <ImageView
            android:id="@+id/img_delete"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/delete_forever"
            android:backgroundTint="@color/white"
            android:clickable="true"
            android:focusable="true"/>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/rowFG"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:orientation="vertical"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">




        <ImageView
            android:id="@+id/collection_image"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_weight="1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/menu_collection"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_menu_vert"
                android:layout_gravity="end" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/collection_name"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:text="brand name"
                        android:fontFamily="@font/adamina"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textColor="@color/blue"
                        android:textSize="15sp" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <TextView
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:paddingStart="5dp"
                        android:text="Created Date - "
                        android:textColor="#000000"
                        android:textAllCaps="true"
                        android:textStyle="bold"
                        android:textSize="15sp" />
                        <TextView
                            android:layout_marginTop="5dp"
                            android:id="@+id/collection_createdDate"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingEnd="5dp"
                            android:textAllCaps="true"
                            android:textStyle="bold"
                            android:textSize="15sp" />
                    </LinearLayout>

                        <TextView
                            android:id="@+id/product_count"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:drawableStart="@drawable/ic_count"
                            android:drawableTint="@color/colorAccent"
                            android:drawablePadding="5dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/holder"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:gravity="bottom"
                android:orientation="vertical">


                <!-- <TextView
                     android:id="@+id/Product_name"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginLeft="16dp"
                     android:layout_marginRight="16dp"
                     android:gravity="left"
                     android:lines="2"
                     android:text="Delivery Management"
                     android:textColor="@color/textColorPrimary"
                     android:textSize="16sp"
                     android:textStyle="bold" />-->

                <TextView
                    android:id="@+id/collection_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:layout_gravity="bottom"
                    android:lines="2"
                    android:textColor="@color/themeColorDark"
                    android:textSize="12sp" />

            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>
</RelativeLayout>